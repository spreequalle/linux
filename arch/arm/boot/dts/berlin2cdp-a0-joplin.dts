/dts-v1/;
/include/ "berlin2cdp-a0.dtsi"

/ {
	model = "Google Joplin BG2CDP A0 board based on BERLIN2CDP-A0";
	compatible = "marvell,berlin2cdp-joplin", "marvell,berlin2cdp", "marvell,berlin";

	cpus {
		cpu@0 {
			cpu0-supply = <&vcpu>;
		};
	};

	memory {
		name = "memory";
		device_type = "memory";
		reg = <0x01100000 0x1DD00000>;
	};

	soc {
		shm@29000000 {
			compatible = "mrvl,berlin-shm";
			reg = <0x1EE00000 0x01000000>, <0x1FE00000 0x00100000>;
		};

		i2c@0 {
			pg868 {
				#address-cells = <1>;
				#size-cells = <0>;
				compatible = "marvell,pg86x";
				reg = <0x19>;
				vcpu:BK1_TV@0 {
					regulator-name = "vcpu";
					regulator-min-microvolt = <1000000>;
					regulator-max-microvolt = <1350000>;
					regulator-always-on;
					regulator-boot-on;
				};
			};
			pca9956_0 {
				compatible = "pca9956_led_0";
				reg = <0x15>;
				num_leds = <21>;
				reset_gpio = <&banka 28 0>;
			};
//			capacitive touch space holder
//			cy8cmbr3108 {
//				compatible = "cy8cmbr3108";
//				reg = <0x37>;
//				reset_gpio = <&banka 28 0>;
//			};
//			ambient light sensor space holder
//			opt3002 {
//				compatible = "opt3002";
//				reg = <0x44>;
//				reset_gpio = <&banka 28 0>;
//			};
//			audio amplifier space holder
//			max98373 {
//				compatible = "max98373";
//				reg = <0x64>;
//				reset_gpio = <&banka 28 0>;
//			};
		};
		tsen@F7FCD000 {
			pwr-gpio = <&banka 5 0>;
		};
	};
};
